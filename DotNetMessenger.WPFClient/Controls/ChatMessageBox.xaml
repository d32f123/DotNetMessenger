<UserControl x:Class="DotNetMessenger.WPFClient.Controls.ChatMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DotNetMessenger.WPFClient.Controls"
             mc:Ignorable="d" DataContext="{Binding RelativeSource={RelativeSource Self}}" Margin="5px">
    <UserControl.Resources>
        <local:DateTimeToDateStringConverter x:Key="DateTimeToDateStringConverter" />
    </UserControl.Resources>
    <Border BorderBrush="Gainsboro" BorderThickness="1">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.RowSpan="3" VerticalAlignment="Top" Name="AvatarImage" Width="40" Height="40">
            <Image.Source>
                <Binding Path="SenderAvatar">
                    <Binding.TargetNullValue>
                        <ImageSource>/Resources/defaultAvatar.png</ImageSource>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>
        <Label Grid.Column="1" Grid.Row="0"  Content="{Binding Path=SenderName}"/>
        <Label Name="TextLabel" Grid.Column="1" Grid.Row="1" Content="{Binding Path=MessageText}"/>
        <ItemsControl Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Name="AttachControl">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <Label Grid.Column="2" Grid.Row="0" Margin="0,0,0,0" HorizontalAlignment="Right" 
               Content="{Binding Path=MessageDateTime, Converter={StaticResource DateTimeToDateStringConverter}}"/>
    </Grid>
    </Border>
</UserControl>
